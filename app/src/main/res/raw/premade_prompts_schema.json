      },
      "description": {
        "type": "string"
      },
      "prompt": {
        "type": "string"
      },
      "models": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "negativePrompt": {
        "type": "string"
      },
      "hiresFix": {
        "type": "boolean"
      },
      "params": {
        "type": "object",
        "patternProperties": {
          "^.*$": {
            "type": "array",
            "items": {
              "type": "string"
